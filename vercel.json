{
  "version": 2,
  "functions": {
    "api/**/*": {
      "memory": 1024
    }
  },
  "routes": [
    { "src": "/api/projects", "dest": "/api/projects.ts" },
    { "src": "/api/contact", "dest": "/api/contact.ts" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ],
  "builds": [
    { "src": "client/**/*", "use": "@vercel/static" },
    { "src": "api/**/*", "use": "@vercel/node" }
  ]
} 

{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|svg|pdf|webp)$)", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
} 

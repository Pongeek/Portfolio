{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install",
  "functions": {
    "api/**/*": {
      "memory": 1024
    }
  },
  "routes": [
    {
      "src": "/api/projects",
      "dest": "/api/projects.ts"
    },
    {
      "src": "/api/contact",
      "dest": "/api/contact.ts"
    },
    {
      "src": "/profile-image",
      "dest": "/api/profile-image.ts"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|svg|pdf|webp)$)",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 
} 